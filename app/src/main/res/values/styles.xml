<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="Base.Bottom" parent="Widget.MaterialComponents.Button">

<item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="cornerRadius">200dp</item>
        <item name="android:textSize">28sp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        
    </style>
    
    <style name="Gray.Bottom" parent="Base.Bottom">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/grey</item>

    </style>
    <style name="Orange.Bottom" parent="Base.Bottom">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/orange</item>

    </style>

    <style name="Dark_Gray.Bottom" parent="Base.Bottom">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/dark_gray</item>

    </style>

    <style name="White.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:layout_width">370dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:textSize">20sp</item>
        <item name="textAllCaps">false</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>



</resources>